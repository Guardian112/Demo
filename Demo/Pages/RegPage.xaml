<Page x:Class="Demo.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage"
      Background="White">

    <Grid>
        <StackPanel Width="450">
            <Label Content="Окно регистрации" HorizontalAlignment="Center"/>
            <Label Content="Введите ваше имя"/>
            <TextBox x:Name="Ima"/>
            <Label Content="Введите вашу фамилию"/>
            <TextBox x:Name="Familia"/>
            <Label Content="Введите ваше отчество (при наличии)"/>
            <TextBox x:Name="Otchestvo"/>
            <Label Content="Введите логин"/>
            <TextBox x:Name="Login"/>
            <Label Content="Введите пароль"/>
            <PasswordBox x:Name="Parol"/>
            <Button Content="Зарегестрироваться" Click="RegButton"/>
            <Button Content="Назад" Click="BackToLogin"/>
        </StackPanel>
    </Grid>
</Page>
